<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="web_server.command.server_run" class="Symfony\Component\WebServer\Command\ServerRunCommand">
            <argument>%web_server.docroot%</argument>
            <argument>%kernel.environment%</argument>
            <tag name="console.command" />
        </service>

        <service id="web_server.command.server_start" class="Symfony\Component\WebServer\Command\ServerStartCommand">
            <argument>%web_server.docroot%</argument>
            <argument>%kernel.environment%</argument>
            <tag name="console.command" />
        </service>

        <service id="web_server.command.server_stop" class="Symfony\Component\WebServer\Command\ServerStopCommand">
            <tag name="console.command" />
        </service>

        <service id="web_server.command.server_status" class="Symfony\Component\WebServer\Command\ServerStatusCommand">
            <tag name="console.command" />
        </service>
    </services>

</container>
